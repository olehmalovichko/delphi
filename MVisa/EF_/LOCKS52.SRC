/* ------ Rescue5 1.00(d) (c) APTware 1993,94 ------
     Name: FLCOPY
   Params: INFILE, OUTFILE, NSECONDS
   Return: Logical
  Example: FLCOPY(INFILE, OUTFILE, NSECONDS)
  ..........................................................................
*/

FUNCTION FLCOPY(INFILE, OUTFILE, NSECONDS)

   LOCAL LFOREVER, OLDCOLOR, WIN, CL, C1, C2, C3

   IF FILECOPY(INFILE, OUTFILE) <> 0

      RETURN .T.

   ENDIF

   LFOREVER := NSECONDS == 0

   DO WHILE LFOREVER .OR. NSECONDS > 0

      INKEY(0.5)
      NSECONDS := NSECONDS - 0.5

      IF FILECOPY(INFILE, OUTFILE) <> 0

         RETURN .T.

      ENDIF

   ENDDO

   C1 := MEMVAR->COLORS[2]
   C2 := MEMVAR->COLORS[3]
   C3 := MEMVAR->COLORS[4]
   MEMVAR->COLORS[2] := "w*/r"
   MEMVAR->COLORS[3] := "w+/r"
   MEMVAR->COLORS[4] := "w+/r"
   MEMVAR->ST := UPPER(ALLTRIM(INFILE))
   WIN := MESS(NIL, NIL, {"@ Ошибка ! ", "! " + ST + " ", ;
         "Ошибка копирования файла - файл в монопольном режиме !!!", ;
         REPLICATE("─", 60), "Для прервания попыток создания записи", ;
         "нажмите клавишу "+CHR(34)+"Esc"+CHR(34)})
   MEMVAR->COLORS[2] := C1
   MEMVAR->COLORS[3] := C2
   MEMVAR->COLORS[4] := C3
   __KEYBOARD(" ")
   INKEY()

   DO WHILE LASTKEY() <> 27

      IF FILECOPY(INFILE, OUTFILE) <> 0

         WINCLOSE(WIN)
         RETURN .T.

      ENDIF

      INKEY(0.5)

   ENDDO

   WINCLOSE(WIN)

RETURN .F.

