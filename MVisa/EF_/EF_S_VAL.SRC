   DEVPOS(17, 33)
   DEVOUTPICT(EF_S_KUR->KUR_SALE1, "99999999999.9999")
   DEVPOS(17, 52)
   DEVOUTPICT(EF_S_KUR->KUR_SALE2, "99999999999.9999")
   SETCOLOR(OLDC)

RETURN .T.

