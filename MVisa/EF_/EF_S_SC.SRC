STATIC FUNCTION RED_SC()

   LOCAL KEY := 0, OLDC := SETCOLOR(), WIN, M := 0
   LOCAL CUR_REC := RECNO()

   PRIVATE KOD_SC_V, VALT_V, NAM_SC_V, SC_V, SVN_V

   IF DBEMPTY()

      TONE(125, 1)
      RETURN NIL

   ENDIF

   IF  .NOT. RECLOCK(3)

      RETURN NIL

   ENDIF

   WIN := SAVESCREEN(0, 0, 24, 79)
   M := BROWSE:ROWPOS() + (BROWSE:NTOP() - 1)
   STATUSLINE(BOTIO_2)
   COLORWIN2(BROWSE:ROWPOS() + (BROWSE:NTOP() - 1), BROWSE:NLEFT(), ;
         BROWSE:ROWPOS() + (BROWSE:NTOP() - 1), BROWSE:NRIGHT(), COLORFON)
   SETCOLOR("n/w,w+/b,,,w+/bg")
   MEMVAR->KOD_SC_V := EF_S_SC->KOD_SC
   MEMVAR->VALT_V := EF_S_SC->VALT
   MEMVAR->SC_V := EF_S_SC->SC
   MEMVAR->SCN_V := EF_S_SC->SC_NEW
   MEMVAR->NAM_SC_V := EF_S_SC->NAM_SC

   DO WHILE .T.

      SETPOS(M, 6)
      AADD(GETLIST, __GET(NIL, "kod_sc_v", "XXX", NIL, NIL):DISPLAY())
      SETPOS(M, 14)
      AADD(GETLIST, __GET(NIL, "valt_v", "@!AK XXX", {||VALT_V == "USD" ;
            .OR. VALT_V == KOD_VUAH__}, NIL):DISPLAY())
      SETPOS(M, 22)
      AADD(GETLIST, __GET(NIL, "sc_v", "@!K XXXXXXXXXX", NIL, NIL):DISPLAY(;
            ))
      SETPOS(M, 34)
      AADD(GETLIST, __GET(NIL, "scn_v", "@!K XXXXXXXXXXXXXX", NIL, NIL);
            :DISPLAY())
      SETPOS(M, 50)
      AADD(GETLIST, __GET(NIL, "nam_sc_v", "!" + REPLICATE("X", 24), NIL, ;
            NIL):DISPLAY())
      SETKEYON()
      SETCURSOR(1)
      READMODAL(GETLIST)
      MEMVAR->GETLIST := {}
      SETCURSOR(0)
      SETKEYOF()
      KEY := LASTKEY()

      IF KEY = -9

         IF EMPTY(KOD_SC_V)

            ERROR(NIL, NIL, {"@ Ошибка !", "Поле кода счета должно быть", ;
                  "заполнено !"}, {" Выход "})
            LOOP

         ENDIF

         IF EMPTY(VALT_V)

            ERROR(NIL, NIL, {"@ Ошибка !", "Поле кода валюты должно быть", ;
                  "заполнено !"}, {" Выход "})
            LOOP

         ENDIF

         IF  .NOT. (VALT_V == "USD" .OR. VALT_V == KOD_VUAH__)

            ERROR(NIL, NIL, {"@ Ошибка !", "Поле кода валюты должно быть", ;
                  "заполнено или "+CHR(34)+"USD"+CHR(34)+" или " + ;
                  KOD_VUAH__ + " !"}, {" Выход "})
            LOOP

         ENDIF

         IF EMPTY(SC_V)

            ERROR(NIL, NIL, {"@ Ошибка !", "Поле счета должно быть", ;
                  "заполнено !"}, {" Выход "})
            LOOP

         ENDIF

         IF EMPTY(SCN_V)

            ERROR(NIL, NIL, {"@ Ошибка !", "Поле нового счета должно быть",;
                   "заполнено !"}, {" Выход "})
            LOOP

         ENDIF

         IF EMPTY(NAM_SC_V)

            ERROR(NIL, NIL, {"@ Ошибка !", ;
                  "Поле наименование счета должно быть", "заполнено !"}, {;
                  " Выход "})
            LOOP

         ENDIF

         CUR_REC := RECNO()

         IF DBSEEK(KOD_SC_V + VALT_V)

            MEMVAR->DBERR := .T.

            IF RECNO() == CUR_REC

               DBSKIP()

               IF  .NOT. (KOD_SC_V == EF_S_SC->KOD_SC .AND. VALT_V == ;
                     EF_S_SC->VALT)

                  MEMVAR->DBERR := .F.

               ENDIF

            ENDIF

         ELSE

            MEMVAR->DBERR := .F.

         ENDIF

         DBGOTO(CUR_REC)

         IF DBERR

            ERROR(NIL, NIL, {"@ Ошибка !", ;
                  "Запись с данным кодом счета и валюты", ;
                  "уже есть в справочнике !"}, {" Выход "})
            LOOP

         ENDIF

         EXIT

      ELSEIF KEY = 27

         EXIT

      ENDIF

   ENDDO

   IF KEY = -9

      EF_S_SC->KOD_SC := KOD_SC_V
      EF_S_SC->VALT := VALT_V
      EF_S_SC->SC := SC_V
      EF_S_SC->SC_NEW := SCN_V
      EF_S_SC->NAM_SC := NAM_SC_V
      DBCOMMIT()

   ENDIF

   DBUNLOCK()
   RESTSCREEN(0, 0, 24, 79, WIN)
   SETCOLOR(OLDC)

RETURN NIL

/* ------ Rescue5 1.00(d) (c) APTware 1993,94 ------
     Name: UDL_SC
   Params: None.
   Return: Nil
  Example: UDL_SC()
  ..........................................................................
*/

STATIC FUNCTION UDL_SC()

   LOCAL KEY

   IF DBEMPTY()

      TONE(125, 1)
      RECCOLOR("w+/bg")
      RETURN NIL

   ENDIF

   IF  .NOT. RECLOCK(3)

      RETURN NIL

   ENDIF

   KEY := DIALOG(NIL, NIL, {"Удалять строку ?"}, {"  Да ", " Нет "}, 2)

   IF KEY = 1

      DBDELETE()
      DBCOMMIT()
      DBUNLOCK()

   ELSE

      DBUNLOCK()
      RECCOLOR("w+/bg")
      RETURN NIL

   ENDIF

   DISPBEGIN()
   BROWSE:REFRESHALL()

   DO WHILE  .NOT. BROWSE:STABILIZE()

   ENDDO

   IF BROWSE:ROWPOS() = 1

      BROWSE:REFRESHALL()

      DO WHILE  .NOT. BROWSE:STABILIZE()

      ENDDO

   ENDIF

   DISPEND()

RETURN NIL

