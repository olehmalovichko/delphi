      MEMVAR->COLORS[4] := "n/w"

   ENDIF

   MEMVAR->COLORS[3] := "w+/w"
   MEMVAR->COLORS[4] := "n/w"

   DO WHILE .T.

      FNAME := "TMP" + PADL(LTRIM(STR(RANDOM(), 5)), 5, "0")
      CF_READY := FILESEEK(POS_PATH__ + FNAME + ".REQ")

      IF  .NOT. EMPTY(CF_READY)

         LOOP

      ENDIF

      SET(24, ("") + POS_PATH__ + FNAME + ".REQ", .F.)
      SET(25, 0)
      SET(20, "PRINTER")
      SETPRC(0, 0)
      DEVPOS(0, 0)
      DEVOUT(CSTROKA)
      SET(20, "SCREEN")
      SET(24, "")
      AA := FILESEEK(POS_PATH__ + FNAME + ".REQ")

      IF EMPTY(AA)

         LOOP

      ENDIF

      SET(24, ("") + POS_PATH__ + FNAME + ".Q-F", .F.)
      SET(24, "")
      EXIT

   ENDDO

   FL_EXIT := .F.
   FL_MES := .T.

   IF PR_POSE__

      HOST := POSE_PATH_ + " -u -e"
      WSELECT(0)
      MEMVAR->WINW := SAVESCREEN(0, 0, 24, 79)
      S_RUN(HOST, -1, .T.)
      RESTSCREEN(0, 0, 24, 79, WINW)
      WSELECT(DESKTOP)
      FL_EXIT := .T.
      __KEYBOARD()
      CF_READY := FILESEEK(POS_PATH__ + FNAME + ".P-F")

      IF EMPTY(CF_READY)

      ELSE

         DO WHILE  .NOT. EMPTY(CF_READY)

            MILLISEC(1000)

            IF FERASE(POS_PATH__ + CF_READY) = -1

               ERROR(NIL, NIL, {"@ Внимание !", "Файл ", CHR(34) + ;
                     POS_PATH__ + CF_READY + CHR(34), ;
                     "не удается удалить !", "Удалите файл вручную !", ;
                     "Ошибка DOS: " + ALLTRIM(STR(FERROR(), 10))}, {;
                     " Выход "})
               EXIT

            ELSE

               FL_EXIT := .T.
               EXIT

            ENDIF

         ENDDO

      ENDIF

   ELSE

      __KEYBOARD()

      DO WHILE LASTKEY() <> 27

         INKEY(1)

         IF FL_MES

            BB := FILESEEK(POS_PATH__ + FNAME + ".Q-F")

            IF EMPTY(BB)

               FL_MES := .F.

               IF  .NOT. PR_POSE__

                  WINCLOSE(MES)

               ENDIF

               MEMVAR->COLORS[3] := "gr+/g"
               MEMVAR->COLORS[4] := "w+/g"
               MES := MESS(NIL, NIL, {"@Внимание", "", ;
                     "Происходит авторизация", "Ожидайте...", "", ;
                     "(Esc - отказаться от авторизации)"})
               MEMVAR->COLORS[3] := "w+/w"
               MEMVAR->COLORS[4] := "n/w"

            ENDIF

         ENDIF

         CF_READY := FILESEEK(POS_PATH__ + FNAME + ".P-F")

         IF EMPTY(CF_READY)

            LOOP

         ELSE

            DO WHILE  .NOT. EMPTY(CF_READY) .AND. LASTKEY() <> 27

               MILLISEC(1000)

               IF FERASE(POS_PATH__ + CF_READY) = -1

                  ERROR(NIL, NIL, {"@ Внимание !", "Файл ", CHR(34) + ;
                        POS_PATH__ + CF_READY + CHR(34), ;
                        "не удается удалить !", "Удалите файл вручную !", ;
                        "Ошибка DOS: " + ALLTRIM(STR(FERROR(), 10))}, {;
                        " Выход "})
                  EXIT

               ELSE

                  FL_EXIT := .T.
                  EXIT

               ENDIF

            ENDDO

            EXIT

         ENDIF

      ENDDO

   ENDIF

   IF  .NOT. FL_EXIT

      BB := FILESEEK(POS_PATH__ + FNAME + ".Q-F")

      DO WHILE  .NOT. EMPTY(BB)

         IF FERASE(POS_PATH__ + BB) = -1

            ERROR(NIL, NIL, {"@ Внимание !", "Файл ", CHR(34) + POS_PATH__ ;
                  + BB + CHR(34), "не удается удалить !", ;
                  "Удалите файл вручную !", "Ошибка DOS: " + ALLTRIM(STR(;
                  FERROR(), 10))}, {" Продолжить "})
            EXIT

         ELSE

            EXIT

         ENDIF

      ENDDO

      AA := FILESEEK(POS_PATH__ + FNAME + ".REQ")

      DO WHILE  .NOT. EMPTY(AA)

         IF FERASE(POS_PATH__ + AA) = -1

            ERROR(NIL, NIL, {"@ Внимание !", "Файл ", CHR(34) + POS_PATH__ ;
                  + AA + CHR(34), "не удается удалить !", ;
                  "Удалите файл вручную !", "Ошибка DOS: " + ALLTRIM(STR(;
                  FERROR(), 10))}, {" Продолжить "})
            EXIT

         ELSE

            EXIT

         ENDIF

      ENDDO

      CSTROKA := ""

      IF  .NOT. PR_POSE__

         WINCLOSE(MES)

      ENDIF

      ERROR(NIL, NIL, {"@ Внимание !", "Программная авторизация", ;
            "была прервана по клавише "+CHR(34)+"Esc"+CHR(34)+" !", ;
            "Вам необходимо провести авторизацию голосом !"}, {;
            " Продолжить "})

   ELSE

      CF_READY := FILESEEK(POS_PATH__ + FNAME + ".RSP")

      IF EMPTY(CF_READY)

         IF  .NOT. PR_POSE__

            WINCLOSE(MES)

         ENDIF

         ERROR(NIL, NIL, {"@ Внимание !", "Файл ответа"+CHR(34) + FNAME + ;
               ".RSP" + CHR(34) + "не найден !", ;
               "Вам необходимо провести авторизацию голосом !"}, {;
               " Выход "})
         CSTROKA := ""

      ELSE

         NHANDLE := FOPEN(POS_PATH__ + CF_READY, 0)

         IF FERROR() <> 0

            IF  .NOT. PR_POSE__

               WINCLOSE(MES)

            ENDIF

            ERROR(NIL, NIL, {"@ Внимание !", "Файл ", CHR(34) + POS_PATH__ ;
                  + CF_READY + CHR(34), "не может быть открыт !", ;
                  "Ошибка DOS: " + ALLTRIM(STR(FERROR(), 10))}, {" Выход "};
                  )
            RETURN ""

         ENDIF

         NLENGTH := FSEEK(NHANDLE, 0, 2)
         FSEEK(NHANDLE, 0, 0)
         CSTROKA := STREAD(NHANDLE, NLENGTH)
         FCLOSE(NHANDLE)
         AA := FILESEEK(POS_PATH__ + FNAME + ".RSP")

         DO WHILE  .NOT. EMPTY(AA)

            IF FERASE(POS_PATH__ + AA) = -1

               IF 2 = ERROR(NIL, NIL, {"@ Внимание !", "Файл ", CHR(34) + ;
                     POS_PATH__ + AA + CHR(34), "не удается удалить !", ;
                     "Удалите файл вручную !", "Ошибка DOS: " + ALLTRIM(;
                     STR(FERROR(), 10))}, {" Повторить ", " Выйти "})

                  EXIT

               ELSE

                  LOOP

               ENDIF

            ELSE

               EXIT

            ENDIF

         ENDDO

         IF  .NOT. PR_POSE__

            WINCLOSE(MES)

         ENDIF

         IF SUBSTR(CSTROKA, 2, 2) == "00"

            CSTROKA := SUBSTR(CSTROKA, LEN(CSTROKA) - 6, 6)

         ELSE

            ERROR(NIL, NIL, {"@Ошибка !", "", "Программа авторизации", ;
                  "вернула код: "+CHR(34) + SUBSTR(CSTROKA, 2, 2) + CHR(34);
                  , CHR(34) + ALLTRIM(SUBSTR(CSTROKA, 5, LEN(CSTROKA) - 5));
                   + CHR(34), "", "Выполните авторизацию голосом"}, {;
                  " Продолжить "})
            CSTROKA := ""

         ENDIF

      ENDIF

   ENDIF


RETURN CSTROKA

/* ------ Rescue5 1.00(d) (c) APTware 1993,94 ------
     Name: STREAD
   Params: NHANDLE, NLENGTH
   Return: String
  Example: STREAD(NHANDLE, NLENGTH)
  ..........................................................................
*/

FUNCTION STREAD(NHANDLE, NLENGTH)

   LOCAL I, TEKPOS, CSTRING := "", CBUFF := " "

   TEKPOS := FSEEK(NHANDLE, 0, 1)

   FOR I := TEKPOS TO NLENGTH - 1

      IF FREAD(NHANDLE, @CBUFF, 1) <> 1

         ERROR(NIL, NIL, {"@ Внимание !", "Ошибка чтения файла !!!"}, {;
               " Выход "})
         FCLOSE(NHANDLE)
         RETURN ""

      ENDIF

      CSTRING := CSTRING + CBUFF
      ++TEKPOS

      IF CBUFF == CHR(13)

         IF FREAD(NHANDLE, @CBUFF, 1) <> 1

            ERROR(NIL, NIL, {"@ Внимание !", "Ошибка чтения файла !!!"}, {;
                  " Выход "})
            FCLOSE(NHANDLE)
            RETURN ""

         ENDIF

         CSTRING := CSTRING + CBUFF
         ++TEKPOS

         IF CBUFF == CHR(10)

            EXIT

         ENDIF

      ENDIF

   NEXT

   IF SUBSTR(CSTRING, LEN(CSTRING) - 1, 2) == CHR(13)+CHR(10)

      CSTRING := SUBSTR(CSTRING, 1, LEN(CSTRING) - 2)

   ENDIF


RETURN CSTRING

