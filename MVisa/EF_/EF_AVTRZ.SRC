         NLENGTH, HOST := ""
   LOCAL WIN

   IF PR_POSE__

      MEMVAR->PPP := FILESEEK(("") + POSE_PATH_)

      IF EMPTY(PPP)

         ERROR(NIL, NIL, {"@ Внимание !", ;
               "Программа авторизации не не существет в указанном каталоге";
               , "Выполните авторизацию голосом"}, {" Продолжить "})
         RETURN ""

      ENDIF

   ELSE

      CF_READY := FILESEEK(POS_PATH__ + "READY.*")

      IF EMPTY(CF_READY)

         ERROR(NIL, NIL, {"@ Внимание !", ;
               "Программа авторизации не готова к работе !", ;
               "Выполните авторизацию голосом"}, {" Продолжить "})
         RETURN ""

      ENDIF

      MEMVAR->COLORS[3] := "gr+/g"
      MEMVAR->COLORS[4] := "w+/g"
      MES := MESS(NIL, NIL, {"@Внимание", "", ;
            "Отправлен запрос на авторизацию", "Ожидайте...", "", ;
            "(Esc - отказаться от авторизации)"})
