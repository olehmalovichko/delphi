      IF IF(PR_BA__, .F.,  .NOT. ADDREC(3)) .OR. EF_KASR->( .NOT. ADDREC(3));
             .OR. ( .NOT. EF_SYS->(RECLOCK(3)) .OR. .NOT. EF_PROV->(ADDREC(3);
            ))

         DBUNLOCKAL()
         DBSELECTAR("ef_kasr")
         DBGOTO(REC)
         SETCOLOR(OLDCOLOR)
         STATUSLINE(BOTIO_1)
