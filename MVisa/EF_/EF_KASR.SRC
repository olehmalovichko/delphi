      ENDIF

      NPP := EF_SYS->N_PP + 1

      IF VAL_ == KOD_VUAH__

         IF PR_BA__

            EF_KASR->DAT_DOC := DAT_OD__
            EF_KASR->PR_PK := .F.

         ELSE

            IF KN_SYS->PR_PK = .T.

               EF_KASR->DAT_DOC := KN_SYS->DAT_PD

            ELSE

               EF_KASR->DAT_DOC := DAT_OD__

            ENDIF

            EF_KASR->PR_PK := KN_SYS->PR_PK

         ENDIF

      ELSEIF PR_BA__

         EF_KASR->DAT_DOC := DAT_OD__
         EF_KASR->PR_PK := .F.

      ELSE

         IF KV_SYS->PR_PK = .T.

            EF_KASR->DAT_DOC := KV_SYS->DAT_PD

         ELSE

            EF_KASR->DAT_DOC := DAT_OD__

         ENDIF

         EF_KASR->PR_PK := KV_SYS->PR_PK

