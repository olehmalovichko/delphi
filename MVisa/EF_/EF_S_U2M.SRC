     Name: SPRUSER2M
   Params: None.
   Return: Nil
  Example: SPRUSER2M()
  ..........................................................................
*/

FUNCTION SPRUSER2M()

   LOCAL NKEY := 0
   LOCAL LMORE, DESKTOP, ABROWSE

   PRIVATE BROWSE, COLUMN
   PRIVATE INDEXBLOCK, BL_PR_US
   PRIVATE IKEY_TOP := "", IKEY_BOT := ""
   PRIVATE COLORFON, COLORCUR, VYVBLOCK, CAL, CFL, SEP
   PRIVATE BOTIO_1 := {"~Esc-~выход", "~F2-~ввод", "~F3-~редактирование", ;
         "~F4-~удаление"}
   PRIVATE BOTIO_2 := {"~Esc-~выход", "~F10-~запомнить"}
   PRIVATE ARR_U := {}

   IF  .NOT. AREA_OPEN({{"ef_s_mop"}, {"ef_merch"}, {"ps_s_pas", .F., 3, ;
         DIR_AK__}, {"ps_s_pol", .F., 3, DIR_AK__}})

      DBCLOSEALL()
      RETURN NIL

   ENDIF

   DBSELECTAR("ef_merch")
   DBSETORDER(2)
   ADD_ARR()
   DBSELECTAR("ef_s_mop")
   MEMVAR->CFL := {"fio_op", "usd_merch", "uah_merch", "kom_merch"}
   MEMVAR->CAL := ARRAY(LEN(CFL))
   AFILL(CAL, "ef_s_mop->")
   MEMVAR->SEP := {"   ", "    ", "    ", "    ", "   "}
   ABROWSE := CREATTBROW(3, 10, 21, 72, "fio_op", {||CREATSTR(CAL, CFL, ;
         SEP)})
   MEMVAR->BROWSE := ABROWSE[1]
   MEMVAR->COLUMN := ABROWSE[2]
   MEMVAR->COLORFON := "N/W"
   MEMVAR->COLORCUR := "W+/GB"
   MEMVAR->VYVBLOCK := ""
   MEMVAR->BL_PR_US := ""
   MEMVAR->INDEXBLOCK := ""
   USTANTBROW(BROWSE, COLORFON, COLORCUR, IKEY_TOP, IKEY_BOT, INDEXBLOCK, ;
         BL_PR_US)
   SETCOLOR("w+/w")
   DESKTOP := WIN(1, 0, 24, 79)
   DISPBOX(0, 0, 22, 79, DOUBLE)
   CENTR(NIL, 0, " Пользователи   ")
   SCRIO_1()
   STATUSLINE(BOTIO_1)
   OBRIO_1()
   DBCLOSEALL()
   WINCLOSE(DESKTOP)

RETURN NIL

/* ------ Rescue5 1.00(d) (c) APTware 1993,94 ------
     Name: ADD_ARR
   Params: None.
   Return: Logical
  Example: ADD_ARR()
  ..........................................................................
*/

STATIC FUNCTION ADD_ARR()

   LOCAL PR := "Комплекс программ "+CHR(34)+"МИНИ - ОТДЕЛЕНИЯ"+CHR(34)+;
         " ~ПриватБанк~, (c)"
   LOCAL PR__ := CHARNOT(CHARSWAP(CHARMIRR(PR)))
   LOCAL ARR_ := {}

   DBSELECTAR("ps_s_pol")

   DO WHILE  .NOT. EOF()

      IF CRYPT(PS_S_POL->KOD_KOMP, PR__) == KOD_KOMP__

         AADD(ARR_, PS_S_POL->PAROL)

      ENDIF

      DBSKIP()

   ENDDO

   DBSELECTAR("ps_s_pas")

   FOR I := 1 TO LEN(ARR_)

      IF DBSEEK(ARR_[I])

         AADD(ARR_U, {CRYPT(PS_S_PAS->FIO_OP, PR__), CRYPT(PS_S_PAS->FIO_OP, ;
               PR__)})

      ENDIF

   NEXT


RETURN .T.

