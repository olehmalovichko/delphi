STATIC FUNCTION MAINPACKBA()

   LOCAL WIN, OLDCOLOR := SETCOLOR()
   LOCAL I, BUT

   PRIVATE MAS_PRC, CHAK := 0, ABASE := ARRAY(0)
   SETCOLOR("w+/w")
   WIN := WIN(10, 20, 16, 59, "d", "t")
   SETCOLOR("n/w")
   CENTR(NIL, 1, "Идет паковка БД")
   MEMVAR->ABASE := DBASESTR(.T.)
   MEMVAR->MAS_PRC := LINER(5, 2, 30, LEN(ABASE))

   FOR I := 1 TO LEN(ABASE)

      LPACKBASE(MEMVAR->ABASE[I], ++MEMVAR->CHAK)

   NEXT

   CENTR(NIL, 1, "Паковка завершена !")
   DEVPOS(4, 15)
   DEVOUT(SPACE(15))
   BUT := BUTTONS(NIL, 4, {" Продолжить "})
   WINCLOSE(WIN)
   SETCOLOR(OLDCOLOR)

RETURN NIL

/* ------ Rescue5 1.00(d) (c) APTware 1993,94 ------
     Name: LPACKBASE
   Params: CFNAME, NNUM
   Return: Nil
  Example: LPACKBASE(CFNAME, NNUM)
  ..........................................................................
*/

STATIC FUNCTION LPACKBASE(CFNAME, NNUM)

   IF  .NOT. BASEOPEN(CFNAME, .T., 3)

      DBCLOSEALL()
      ERROR(NIL, NIL, {"@ Ошибка !", "Не могу открыть файл " + UPPER(;
            ALLTRIM(CFNAME) + ".DBF")}, {" Пропустить БД "})

   ELSE

      __DBPACK()
      DBCLOSEALL()

   ENDIF

   LINER(MAS_PRC, NNUM)
   DEVPOS(4, 15)
   DEVOUT(UPPER(ALLTRIM(CFNAME) + ".dbf   "), "gr+/w")

RETURN NIL

