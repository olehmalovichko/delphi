/* ------ Rescue5 1.00(d) (c) APTware 1993,94 ------
     Name: OB_VV
   Params: None.
   Return: Nil
  Example: OB_VV()
  ..........................................................................
*/

STATIC FUNCTION OB_VV()

   LOCAL OLDCOLOR, SUMP := "", MSP := ARRAY(3), J := 0

   AFILL(MSP, "")
   OLDCOLOR := SETCOLOR("+W/W")

   IF EF_KASP->KOD_V == KOD_VUAH__

      DEVPOS(2, 64)
      DEVOUT("Симв.касспл", "n/w")

   ELSE

      DEVPOS(2, 64)
      DEVOUT("   Дебет   ", "n/w")

   ENDIF

   DEVPOS(2, 45)
   DEVOUT("Сумма в " + EF_KASP->KOD_V, "n/w")
   DEVPOS(1, 34)
   DEVOUT(SUBSTR(EF_KASP->PL, 1, 45))
   DEVPOS(3, 22)
   DEVOUT(EF_KASP->SC_KT)
   DEVPOS(3, 39)
   DEVOUT(EF_KASP->SUMMA)

   IF EF_KASP->KOD_V == KOD_VUAH__

      DEVPOS(3, 63)
      DEVOUT("              ")
      DEVPOS(3, 65)
      DEVOUT("    " + EF_KASP->CH_KPLAN + "    ")

   ELSE

      DEVPOS(3, 63)
      DEVOUT(EF_KASP->SC_DT)

   ENDIF

   IF EF_KASP->KOD_V == KOD_VUAH__

      SUMP := SUM_PROP(EF_KASP->SUMMA, .T.)

   ELSE

      SUMP := SUM_PROP(EF_KASP->SUMMA, .T., KOD_VUSD__, "cent")

   ENDIF

   DO WHILE (++J) <= 2 .AND. .NOT. EMPTY(SUMP)

      IF LEN(SUMP) >= 55

         FOR I := 54 TO 1 STEP -1

            IF SUBSTR(SUMP, I, 1) == " "

               EXIT

            ENDIF

         NEXT

      ELSE

         MEMVAR->I := LEN(SUMP)

      ENDIF

      MSP[J] := SUBSTR(SUMP, 1, I)
      SUMP := SUBSTR(SUMP, I + 1)

   ENDDO

   SCROLL(5, 24, 6, 78)
   SETPOS(5, 24)
   DEVPOS(5, 24)
   DEVOUTPICT(MSP[1], REPLICATE("X", 54))
   DEVPOS(6, 24)
   DEVOUTPICT(MSP[2], REPLICATE("X", 54))
   DEVPOS(7, 33)
   DEVOUT(SUBSTR(EF_KASP->OSN, 1, 45))

   IF EF_KASP->PR_PK

      DEVPOS(13, 64)
      DEVOUT("ВЕЧЕРНЯЯ касса")

   ELSE

      DEVPOS(13, 64)
      DEVOUT(" ДНЕВНАЯ касса")

   ENDIF

   DEVPOS(15, 29)
   DEVOUT(EF_KASP->FIO_OP)
   DEVPOS(15, 59)
   DEVOUT(EF_KASP->FIO_KAS)
   SETCOLOR(OLDCOLOR)

RETURN NIL

