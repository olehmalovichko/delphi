STATIC FUNCTION V_P_UDL_O()

   LOCAL KEY

   IF PR_KAS__ == "д" .AND. EF_KASP->PR_OPL == "о"

      ERROR(NIL, NIL, {"@ Ошибка !", "Кассовый ордер проведен по кассе !", ;
            "Удаление невозможно !"}, {" Выход "})
      RETURN .F.

   ENDIF

   KEY := DIALOG(NIL, NIL, {"Удалять расходный ордер ?"}, {" Да  ", ;
         " Нет "}, 2)

   IF KEY = 1

      DBSELECTAR("ef_kasp")

      IF EF_KASP->(RECLOCK(3)) .AND. EF_SYS->(RECLOCK(3))

         IF EF_KASP->KOD_V == KOD_VUAH__

            IF PR_BA__

               EF_SYS->IPO_UAH_D := .F.
               EF_SYS->NIPO_UAH := 0

            ELSEIF KN_KAS_P->(DBSEEK(DTOS(DAT_OD__) + EF_KASP->FIO_OP + STR(;
                  EF_KASP->NUM_DOC))) .AND. KN_KAS_P->(RECLOCK(3))

               KN_KAS_P->(DBDELETE())

               IF EF_KASP->PR_PK

                  EF_SYS->IPO_UAH_V := .F.

               ELSE

                  EF_SYS->IPO_UAH_D := .F.

               ENDIF

               EF_SYS->NIPO_UAH := 0

            ENDIF

         ENDIF

         IF EF_PROV->(DBSEEK(DTOS(DAT_OD__) + STR(EF_KASP->N_PP, 7))) .AND. ;
               EF_PROV->(RECLOCK(3))

            EF_PROV->(DBDELETE())

         ENDIF

         MEMVAR->N_PP_ := 0
         EF_KASP->(DBDELETE())
         EF_KASP->(DBGOBOTTOM())
         EF_KASP->(DBSKIP())
         DBCOMMITAL()
         DBUNLOCKAL()
         DBSEEK(IKEY_TOP)

         DO WHILE SUBSTR((&(INDEXKEY(INDEXORD()))), 1, 31) == IKEY_TOP ;
               .AND. .NOT. EOF()

            IF EF_KASP->N_PP = N_PP_

               EXIT

            ENDIF

            DBSKIP()

         ENDDO

         MEMVAR->SUM_O := SUM_

      ELSE

         RETURN .F.

      ENDIF

   ELSE

      RETURN .F.

   ENDIF


RETURN .T.

